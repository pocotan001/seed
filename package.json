{
  "name": "seed",
  "version": "0.0.1",
  "description": "Starter skeleton for frontend projects",
  "private": true,
  "author": "pocotan001",
  "directories": {
    "doc": "doc",
    "test": "test"
  },
  "scripts": {
    "start": "npm run build && npm run serve",
    "test": "karma start --singleRun",
    "clean": "rm -rf dist/*",
    "serve": "browser-sync start --server --no-notify --no-reload-on-restart",
    "lint": "eslint src/js test",
    "styleguide": "styleguide --kss-source 'src/css/**/*.css' --style-source 'dist/app.css' --output styleguide --title 'Seed Style Guide' --commonClass 'styleguide' --appRoot /styleguide",
    "build": "npm run clean && npm run build:css && npm run build:js",
    "build:css": "cssnext -c src/css/index.css dist/app.css",
    "build:js": "browserify src/js -t babelify -s app | uglifyjs -m -c drop_console=true -o dist/app.js",
    "watch": "npm run watch:css & npm run watch:styleguide & npm run watch:js & npm run watch:test & npm run watch:serve",
    "watch:css": "cssnext -s -w src/css/index.css dist/app.css",
    "watch:styleguide": "npm run styleguide -- --watch",
    "watch:js": "watchify src/js -t babelify -s app -d -o dist/app.js -v",
    "watch:test": "karma start",
    "watch:serve": "browser-sync start --server --files src/**"
  },
  "dependencies": {
    "suitcss-base": "^0.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^2.0.2",
    "babelify": "^5.0.4",
    "browser-sync": "^2.3.1",
    "browserify": "^9.0.3",
    "browserify-istanbul": "^0.2.1",
    "cssnext": "^1.2.1",
    "eslint": "^0.17.1",
    "espowerify": "^0.10.0",
    "isparta": "^2.2.0",
    "karma": "^0.12.31",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-cli": "0.0.4",
    "karma-coverage": "git://github.com/karma-runner/karma-coverage.git#master",
    "karma-mocha": "^0.1.10",
    "mocha": "^2.2.1",
    "power-assert": "^0.10.2",
    "sc5-styleguide": "^0.3.8",
    "uglify-js": "^2.4.16",
    "watchify": "^2.4.0"
  }
}
